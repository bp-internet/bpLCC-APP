<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="eu.pi1.bplcc2.MainActivity$FragmentOins" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_computer_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer an" />

        <Button
            android:id="@+id/button_server_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server an" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_r2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC AN" />

        <Button
            android:id="@+id/button_r2_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PC AUS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_r1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relais 1 AN" />

        <Button
            android:id="@+id/button_r1_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relais 1 AUS" />
    </LinearLayout>

    <WebView
        android:id="@+id/webViewLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
